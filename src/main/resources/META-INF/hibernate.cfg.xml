<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- DB schema will be updated if needed -->
    <!-- DB schema will be validated -->
    <property name="hbm2ddl.auto">validate</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/movietime2</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="com.movietime.entities.ActorsEntity"/>
      <mapping class="com.movietime.entities.MoviesEntity"/>
      <mapping class="com.movietime.entities.ProducersEntity"/>
      <mapping class="com.movietime.entities.WritersEntity"/>
      <mapping class="com.movietime.entities.Movies2ActorsEntity"/>
      <mapping class="com.movietime.entities.MpaaratingsEntity"/>
      <mapping class="com.movietime.entities.GenresEntity"/>
      <mapping class="com.movietime.entities.BiographiesEntity"/>
      <mapping class="com.movietime.entities.DirectorsEntity"/>
      <mapping class="com.movietime.entities.EditorsEntity"/>
      <mapping class="com.movietime.entities.KeywordsEntity"/>
      <mapping class="com.movietime.entities.LanguageEntity"/>
      <mapping class="com.movietime.entities.LocationsEntity"/>
      <mapping class="com.movietime.entities.QuotesEntity"/>
      <mapping class="com.movietime.entities.RatingsEntity"/>
      <mapping class="com.movietime.entities.ReleasedatesEntity"/>
      <mapping class="com.movietime.entities.RunningtimesEntity"/>
      <mapping class="com.movietime.entities.TaglinesEntity"/>
      <mapping class="com.movietime.entities.PlotsEntity"/>
      <mapping class="com.movietime.entities.UsersEntity"/>
  </session-factory>
</hibernate-configuration>