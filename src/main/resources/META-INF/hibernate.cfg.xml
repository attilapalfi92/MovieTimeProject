<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- DB schema will be updated if needed -->
    <!-- DB schema will be validated -->
    <property name="hbm2ddl.auto">validate</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/movietime2</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="com.movietime.model.ActorsEntity"/>
      <mapping class="com.movietime.model.MoviesEntity"/>
      <mapping class="com.movietime.model.ProducersEntity"/>
      <mapping class="com.movietime.model.WritersEntity"/>
      <mapping class="com.movietime.model.Movies2ActorsEntity"/>
      <mapping class="com.movietime.model.MpaaRatingsEntity"/>
      <mapping class="com.movietime.model.GenresEntity"/>
      <mapping class="com.movietime.model.BiographiesEntity"/>
      <mapping class="com.movietime.model.DirectorsEntity"/>
      <mapping class="com.movietime.model.EditorsEntity"/>
      <mapping class="com.movietime.model.KeywordsEntity"/>
      <mapping class="com.movietime.model.LanguageEntity"/>
      <mapping class="com.movietime.model.LocationsEntity"/>
      <mapping class="com.movietime.model.QuotesEntity"/>
      <mapping class="com.movietime.model.RatingsEntity"/>
      <mapping class="com.movietime.model.ReleaseDatesEntity"/>
      <mapping class="com.movietime.model.RunningTimesEntity"/>
      <mapping class="com.movietime.model.TaglinesEntity"/>
      <mapping class="com.movietime.model.PlotsEntity"/>
  </session-factory>
</hibernate-configuration>